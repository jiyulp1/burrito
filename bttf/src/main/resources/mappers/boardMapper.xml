<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="kr.co.bttf.mappers.board">

<!-- 
========================================
			01. HTML
========================================
 -->

<select id="htmllist" resultType="kr.co.bttf.domain.HtmlBoardVO">
		select * from html
	</select>
	
	
	<!-- 2. 게시물 작성 -->
	<insert id="htmlwrite" parameterType="kr.co.bttf.domain.HtmlBoardVO">
		insert into html (post_subject, post_content, writer)
		values(#{post_subject}, #{post_content}, #{writers})
	</insert>
	
	
	<!-- 3. 게시물 조회 -->
	<select id="htmlview" parameterType="int" resultType="kr.co.bttf.domain.HtmlBoardVO">
		select * from html
		where post_id = #{post_id}
	</select>
	
	
	<!-- 4. 게시물 수정 -->
	<update id="htmlmodify" parameterType="kr.co.bttf.domain.HtmlBoardVO">
		update html set
		post_subject = #{post_subject}, post_content = #{post_content}, writer = #{writer}
		where post_id = #{post_id}
	</update>
	
	
	<!--5. 게시물 삭제 -->
	<delete id="htmldelete" parameterType="int">
		delete from html
		where post_id = #{post_id}
	</delete>


