<!-- 	</delete> -->

	<update id="oracle_reply_delete" parameterType="kr.co.bttf.domain.OracleReplyVO">
		update reply_oracle set
		avaliability_category_id = 4
		where post_id = #{post_id} and reply_id = #{reply_id}
	</update>
 

</mapper>


